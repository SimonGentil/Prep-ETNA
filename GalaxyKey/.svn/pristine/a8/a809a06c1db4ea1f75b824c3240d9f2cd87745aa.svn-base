.contents
{
    background-color:white;
    height:auto;
    padding:1% 4% 1% 4%;
    margin: 0px 10% 2.5% 10%;
    color:white;
    font-family:Lato-Bold, sans-serif;
}

.description
{
    padding:2% 2% 2% 2%;
    background-color:#191a18;
}

.info
{
    margin-top:0%;
    margin-right:10%;
    padding:1% 4% 1% 4%;
    float:right;
    color:black;
    background-color:white;
}

.info .newprix
{
    color:#8200ff;  
    font-size:xx-large;
    margin-top:-7%;
}

.info .ancienprix
{
    color:grey;
    text-decoration:line-through;
    font-size:large;
}

.button {
	font-family:Lato-Light, sans-serif;
	-webkit-border-radius: 25px;
	-moz-border-radius: 25px;
	border-radius: 25px;
	border: 1px solid rgba(0,0,0,0.4) ;
	box-shadow: inset 0 1px 0 0 rgba(255,255,255,0.5),
				0 0 1px 1px rgba(255,255,255,0.8),
				0 0 0 6px rgba(0,0,0,0.06),
				0 0 0 3px rgba(0,0,0,0.1);
	cursor: pointer;
}

.title:hover
{
   color: #8200ff; 
}
.title {
	padding: 10px;
	float: left;
	color: #fff;
	font-weight: 800;
	font-size: 20px;
	text-shadow: 1px 1px rgba(0,0,0,0.2);
	text-transform: uppercase;
	border-right: 1px solid rgba(255,255,255,0.3);
}

#commentaire {
background: white;
color: black;
width: 96%;
padding:2% 2% 2% 2%;
border: 1px solid #191a18;
height: 2rem;
font-size: 0.875rem;
resize: vertical; 
}

#com {
     color: black;   
     word-wrap: break-word;
}

#comment {
     border-bottom: 1px dotted #8200ff;
}